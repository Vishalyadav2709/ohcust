          </div>

          <!-- User Menu -->
          <div class="user-menu">
          <div id="menuContainer1" class=" firstMenue ">></div>
          <div id="menuContainer2" class=" firstMenue ">></div>
            <div  class="firstMenue1">
            <div id="menuContainer"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column (User Info) - 70% width -->
    <div class="col-md-8" style="width: 70%;">
      <div id="personalInfo" class="info-section">
        <div class="card" style="background-color: {{ block.settings.card_bg_color }}; border-color: {{ block.settings.card_border_color }};">
          <!-- Personal Information -->
          <div >
          <div class="info-item">
